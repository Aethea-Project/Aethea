# =============================================
# Docker Compose Environment Variables
# Copy this to .env and fill in your values
# =============================================

# --- Data Stores ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=aethea_local
DB_PORT=5432
REDIS_PORT=6379

# --- Application Ports ---
BACKEND_PORT=3001
WEB_PORT=5173

# --- Cloudflare Tunnel ---
# Path to your .cloudflared directory containing the credentials JSON file
CLOUDFLARED_CREDENTIALS_DIR=~/.cloudflared

# --- Production Build Args (only needed for prod profile) ---
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=https://api.aethea.me
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key

# --- Dev Tools (only needed for tools profile) ---
PGADMIN_EMAIL=admin@aethea.me
PGADMIN_PASSWORD=admin
