# ============================================
# ROOT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to each app folder and rename to .env
# Never commit actual .env files to git!

# ============================================
# BACKEND (.env location: backend/.env)
# ============================================
PORT=3001
NODE_ENV=development

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

JWT_SECRET=your-secret-key-minimum-32-characters
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://postgres:password@localhost:5432/medical_platform

CORS_ORIGIN=http://localhost:5173,http://localhost:19006
ALLOWED_HOSTS=localhost,127.0.0.1
API_VERSION=v1
API_RATE_LIMIT=100
LOG_LEVEL=debug

# ============================================
# WEB (.env location: web/.env)
# ============================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_API_URL=http://localhost:3001
VITE_API_VERSION=v1

# ============================================
# MOBILE (.env location: mobile/.env)
# ============================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_API_VERSION=v1

# ============================================
# NOTES
# ============================================
# - SUPABASE_ANON_KEY: Safe to use in client apps (web/mobile)
# - SUPABASE_SERVICE_ROLE_KEY: Only use in backend (has admin access!)
# - Generate JWT_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# - For production: Use proper secret management (AWS Secrets Manager, etc.)
