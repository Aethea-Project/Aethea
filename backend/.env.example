# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# ⚠️ NEVER COMMIT THIS FILE WITH REAL VALUES
# Service role key has admin access - keep it secret!
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Direct connection (if needed, bypassing Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/medical_platform

# ============================================
# REDIS CONFIGURATION
# ============================================
# For caching and queue management
REDIS_URL=redis://localhost:6379

# ============================================
# JWT & AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-minimum-32-characters-long

# ============================================
# API CONFIGURATION
# ============================================
API_VERSION=v1
API_RATE_LIMIT=100

# ============================================
# SECURITY & CORS
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:19006
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
